---
import { ViewTransitions } from "astro:transitions";
import { siteInfo } from "../const/site-info";
import NavBar from "../components/shared/NavBar.astro";
import Footer from "../components/shared/Footer.astro";

interface Props {
  titulo: string;
}

const { titulo } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/logotipo.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={siteInfo.description} />
    <meta name="autor" content="Omar Solis Carvajal" />
    <meta
      name="keywords"
      content="Centro Integral Veterinario, veterinaria, servicios veterinarios, atenciÃ³n veterinaria, salud de mascotas, veterinario en Merida Yucatan, Doctora Shirley"
    />

    <!--OG Metatags -->
    <meta property="og:title" content={titulo} />
    <meta property="og:description" content={siteInfo.description} />
    <meta property="og:image" content={siteInfo.imagen} />

    <meta name="generator" content={Astro.generator} />
    <title>{titulo}</title>
    <ViewTransitions />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="grid grid-rows-[auto_1fr_auto] min-h-screen">
    <NavBar />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<script>
  import { setupAos } from "../js/setupAos";
  setupAos();

  document.addEventListener("DOMContentLoaded", setupAos);
  document.addEventListener("astro:page-load", setupAos);
</script>

<style is:global>
  html {
    font-family: "Poppins";
  }
</style>
