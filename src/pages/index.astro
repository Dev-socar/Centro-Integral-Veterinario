---
import Layout from "../layout/Layout.astro";
import Hero from "../components/shared/Hero.astro";
import Testimonio from "../components/testimonios/TestimonioSwiper.astro";
import ServicioCard from "../components/servicios/ServicioCard.astro";
import UbicacionMapa from "../components/shared/UbicacionMapa.astro";
import Horario from "../components/shared/Horario.astro";
import Enlace from "../components/shared/Enlace.astro";

import { testimonios } from "../interfaces/testimonios/testimonios";
import { servicios } from "../interfaces/servicios/servicios";
---

<Layout titulo="Centro Integral Veterinario">
  <Hero />
  <section class="p-5 lg:p-0 lg:pb-20 bg-gray-50">
    <div>
      <h2
        class="capitalize text-3xl mx-auto text-center lg:text-4xl flex flex-col w-auto lg:w-max"
      >
        <span class="text-6xl">üêæ</span>
        La mejor experiencia para tus mascotas
        <div class="border-b-4 border-b-blue-600 mt-2 w-1/3 mx-auto"></div>
      </h2>
    </div>
    <div
      class="grid grid-cols-1 sm:grid-cols-2 gap-2 lg:gap-0 mt-5 h-auto lg:h-[40rem]"
    >
      <div class="hidden sm:block w-full h-auto overflow-hidden">
        <img
          src="testimonios.jpg"
          class="w-full h-auto object-cover"
          alt="Imagen de testimonios "
        />
      </div>
      <div class="flex flex-col justify-center">
        <div
          class="swiper mySwiper w-full h-full mt-3 lg:h-1/2 bg-blue-400 rounded md:rounded-none"
        >
          <div class="swiper-wrapper">
            {
              testimonios.map((testimonio) => (
                <Testimonio testimonio={testimonio} />
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="mt-10 p-2 sm:p-0 servicios overflow-hidden">
    <div class="grid sm:grid-cols-2 gap-5 sm:gap-10 sm:w-[90%] sm:mx-auto mt-5">
      {
        servicios
          .slice(0, 4)
          .map((servcio, index) => (
            <ServicioCard servicio={servcio} index={index} />
          ))
      }
    </div>
    <Enlace href="/servicios" texto="Nuestros Servicios" />
  </section>

  <section class="mt-10">
    <div
      class="relative h-[30rem] sm:h-[40rem] bg-cover bg-center"
      style="background-image: url('banner-index.jpg');"
    >
      <div class="absolute inset-0 bg-black opacity-50"></div>
      <div class="relative z-10 flex flex-col p-2 justify-center h-full">
        <h2 class="text-white text-3xl font-bold text-center px-4 capitalize">
          Necesitas una consulta a domicilio?
        </h2>
        <p class="sm:w-1/2 text-gray-200 mt-5 text-lg sm:mx-auto text-center">
          Lorem ipsum dolor sit, amet consectetur adipisicing elit. Delectus
          numquam, placeat ipsam exercitationem optio maxime consequuntur soluta
          velit tenetur pariatur at laudantium voluptate nemo totam dolore et
          asperiores laborum autem!
        </p>
        <Enlace href="#" texto="Saber Mas" />
      </div>
    </div>

    <div class="my-10" data-aos="zoom-in-up" data-aos-duration="1000">
      <div>
        <h2
          class="capitalize text-3xl mx-auto text-center lg:text-4xl flex flex-col w-auto lg:w-max"
        >
          <span class="text-6xl">üêæ</span>
          D√≥nde y Cu√°ndo Encontrarnos
          <div class="border-b-4 border-b-blue-600 mt-2 w-1/3 mx-auto"></div>
        </h2>
      </div>
      <div class="grid sm:grid-cols-2 gap-2 px-2 mt-5">
        <UbicacionMapa clases="w-full" />
        <Horario />
      </div>
    </div>
  </section>
</Layout>

<script>
  import { testimoniosSwiper } from "../js/testimoniosSwiper";

  testimoniosSwiper();
  document.addEventListener("DOMContentLoaded", testimoniosSwiper);
  document.addEventListener("astro:page-load", testimoniosSwiper);
</script>

<style>
  .servicios::before {
    @apply block top-0 left-1/2 w-1/2 h-2 bg-blue-600 content-[""];
  }
</style>
