---
import type { Integrante } from "../../interfaces/integrantes/integrantes";

interface Props {
  integrante: Integrante;
}

const { integrante } = Astro.props;
---

<div class="p-2 rounded shadow" data-aos="fade-up" data-aos-duration="1000">
  <div class="w-full h-96">
    <img
      src={integrante.imagen}
      class="object-cover w-full h-full"
      alt="Imagen del Integrante"
    />
  </div>
  <p class="my-3 text-center text-blue-500 font-semibold">
    {`${integrante.puesto}. ${integrante.nombre}`}
  </p>
</div>
